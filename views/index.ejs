<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%=  subdomain.toUpperCase() %></title>
  <style>
 
  </style>
  <!-- MD Bootstrap CSS -->
  <link
  href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.css"
  rel="stylesheet"/>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-4">
        <div class="container-fluid">
          <a class="navbar-brand" href="#"><%=  subdomain.toUpperCase() %></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/contact">Contact</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      
      <div class="container">
        <h1 class="my-5">Welcome to <%= subdomain %> subdomain</h1>
        <div class="card-deck mx-3">
          <% destinations.forEach(function(destination) { %>
          <div class="card m-2">
            <div class="card-body">
              <h5 class="card-title"><%= destination.starting_location %> to <%= destination.ending_location %></h5>
              <p class="card-text"><%= destination.travel_description %></p>
              <a href="<%= `booking/${destination.id}` %>" class="btn btn-primary">Book Now</a>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
  <!-- MD Bootstrap JavaScript -->
  <script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"
></script>
</body>
</html>
